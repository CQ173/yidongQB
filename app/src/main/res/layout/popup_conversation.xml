<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/m45"
        android:layout_marginRight="@dimen/m45"
        android:layout_height="wrap_content"
        android:background="@drawable/white_textview_shape"
        >
        <TextView
            android:id="@+id/tv_pop_title"
            android:layout_marginTop="@dimen/m20"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系客服"
            android:textSize="@dimen/m18"
            android:textColor="@color/color_FF5958"
            />

        <TextView
            android:paddingBottom="@dimen/m10"
            android:id="@+id/tv_pop_content"
            android:gravity="center"
            android:paddingLeft="@dimen/m15"
            android:paddingRight="@dimen/m15"
            android:layout_marginTop="@dimen/m15"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QQ:\t1214462583\n\n邮箱:\t\t1214462583.@qq.com"
            android:textSize="13dp"
            android:textColor="@color/colorGray54"
            />

        <TextView
            android:layout_marginTop="@dimen/m3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_E7E7E7"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_Determine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/m8"
                android:paddingBottom="@dimen/m8"
                android:layout_weight="1"
                android:text="返回"
                android:gravity="center"
                android:textSize="@dimen/m18"
                android:textColor="@color/colorGray8b"
                />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
